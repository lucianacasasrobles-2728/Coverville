<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns:fx="http://javafx.com/fxml" fx:controller="com.greenvile.view.ResidentController">
    <HBox spacing="10">
        <Label text="Search:"/>
        <TextField fx:id="searchField" prefWidth="200"/>
    </HBox>
    <ListView fx:id="residentListView" prefHeight="300" prefWidth="400"/>
    <HBox spacing="10">
        <Button text="Add" onAction="#onAdd"/>
        <Button fx:id="updateButton" text="Update" onAction="#onUpdate"/>
        <Button fx:id="deleteButton" text="Delete" onAction="#onDelete"/>
    </HBox>
</VBox>